{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión | Aurora.gg{% endblock %}

{% block body %}
<div class="min-h-[85vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <!-- Background with Overlay -->
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-[#171a21] to-black opacity-95"></div>
        <div class="absolute inset-0 bg-[url('https://cdn.akamai.steamstatic.com/steamcommunity/public/images/apps/730/2f66c624647970d24e12e88241473132646c0752.jpg')] bg-cover bg-center mix-blend-overlay opacity-20 blur-sm"></div>
    </div>

    <!-- Card -->
    <div class="max-w-md w-full space-y-8 relative z-10 bg-[#171a21]/90 backdrop-blur-md p-8 sm:p-10 rounded-xl shadow-[0_0_50px_rgba(0,0,0,0.7)] border border-[#2a475e]/50 ring-1 ring-white/5">
        
        <div class="text-center">
            <h2 class="mt-2 text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-[#66c0f4] to-white tracking-widest uppercase mb-2">
                Aurora.gg
            </h2>
            <p class="text-sm text-gray-400 tracking-wide font-medium">
                BIENVENIDO AGENTE
            </p>
        </div>

        <form class="mt-8 space-y-6" method="post">
            {% if error %}
                <div class="animate-pulse bg-red-900/30 border border-red-500/50 text-red-200 px-4 py-3 rounded text-sm flex items-center gap-3 shadow-sm">
                    <i class="fa-solid fa-circle-exclamation text-red-500"></i>
                    <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                </div>
            {% endif %}

            {% if app.user %}
                <div class="text-center text-gray-300 bg-[#2a475e]/30 p-4 rounded-lg border border-[#2a475e]/50">
                    <div class="mb-2">Conectado como <span class="font-bold text-white">{{ app.user.userIdentifier }}</span></div>
                     <a href="{{ path('app_logout') }}" class="text-xs uppercase tracking-wider text-[#66c0f4] hover:text-white transition-colors font-bold border-b border-[#66c0f4] hover:border-white pb-0.5">Cerrar sesión</a>
                </div>
            {% endif %}

            <div class="space-y-5">
                <div class="group">
                    <label for="inputEmail" class="block text-xs font-bold text-[#66c0f4] uppercase tracking-wider mb-2 transition-colors group-focus-within:text-white">Email</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-500">
                            <i class="fa-solid fa-envelope"></i>
                        </div>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" 
                               class="appearance-none block w-full pl-10 pr-3 py-3 border border-[#2a475e] bg-[#1b2838] placeholder-gray-600 text-white rounded focus:outline-none focus:ring-2 focus:ring-[#66c0f4] focus:border-transparent focus:bg-[#202f42] transition-all sm:text-sm shadow-inner" 
                               placeholder="nombre@ejemplo.com" autocomplete="email" required autofocus>
                    </div>
                </div>
                <div class="group">
                    <label for="inputPassword" class="block text-xs font-bold text-[#66c0f4] uppercase tracking-wider mb-2 transition-colors group-focus-within:text-white">Contraseña</label>
                     <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-500">
                            <i class="fa-solid fa-lock"></i>
                        </div>
                        <input type="password" name="password" id="inputPassword" 
                               class="appearance-none block w-full pl-10 pr-3 py-3 border border-[#2a475e] bg-[#1b2838] placeholder-gray-600 text-white rounded focus:outline-none focus:ring-2 focus:ring-[#66c0f4] focus:border-transparent focus:bg-[#202f42] transition-all sm:text-sm shadow-inner" 
                               placeholder="••••••••" autocomplete="current-password" required>
                    </div>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="flex items-center justify-between mt-2">
                <div class="flex items-center">
                    <input id="remember_me" name="_remember_me" type="checkbox" class="h-4 w-4 text-[#66c0f4] focus:ring-[#66c0f4] border-gray-600 rounded bg-[#1b2838] cursor-pointer">
                    <label for="remember_me" class="ml-2 block text-xs text-gray-400 select-none cursor-pointer hover:text-gray-300">
                        Recordarme
                    </label>
                </div>

                <div class="text-xs">
                    <a href="#" class="font-medium text-[#66c0f4] hover:text-white transition-colors hover:underline">
                        ¿Contraseña olvidada?
                    </a>
                </div>
            </div>

            <div class="pt-2">
                <button type="submit" class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-bold rounded text-white bg-gradient-to-r from-[#66c0f4] to-[#4b96c4] hover:from-[#4b96c4] hover:to-[#66c0f4] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#66c0f4] transition-all shadow-lg shadow-blue-500/20 transform hover:-translate-y-0.5">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <i class="fa-solid fa-right-to-bracket text-blue-200 group-hover:text-white transition-colors"></i>
                    </span>
                    INICIAR SESIÓN
                </button>
            </div>

            <div class="relative flex py-4 items-center">
                <div class="flex-grow border-t border-gray-700"></div>
                <span class="flex-shrink-0 mx-4 text-gray-500 text-[10px] uppercase font-bold tracking-widest">O accede con</span>
                <div class="flex-grow border-t border-gray-700"></div>
            </div>

            <div>
                <a href="{{ path('connect_google_start') }}" class="group relative w-full flex justify-center py-3 px-4 border border-gray-600 text-sm font-bold rounded text-gray-200 bg-[#25282e] hover:bg-white hover:text-black focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all shadow-lg items-center gap-3 transform hover:-translate-y-0.5">
                    <i class="fa-brands fa-google text-red-500 text-lg group-hover:text-red-600"></i>
                    <span>Google</span>
                </a>
            </div>
        </form>
        
        <div class="text-center mt-6 pt-4 border-t border-gray-800">
            <p class="text-gray-500 text-xs">
                ¿No tienes cuenta en Aurora.gg? 
                <a href="{{ path('app_register') }}" class="text-[#66c0f4] hover:text-white font-bold ml-1 hover:underline transition-colors">Regístrate gratis</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}