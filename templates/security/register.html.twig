{% extends 'base.html.twig' %}

{% block title %}Registro | Aurora.gg{% endblock %}

{% block body %}
<div class="min-h-[85vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <!-- Background with Overlay -->
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-[#171a21] to-black opacity-95"></div>
        <div class="absolute inset-0 bg-[url('https://cdn.akamai.steamstatic.com/steamcommunity/public/images/apps/730/2f66c624647970d24e12e88241473132646c0752.jpg')] bg-cover bg-center mix-blend-overlay opacity-20 blur-sm"></div>
    </div>

    <!-- Card -->
    <div class="max-w-md w-full space-y-8 relative z-10 bg-[#171a21]/90 backdrop-blur-md p-8 sm:p-10 rounded-xl shadow-[0_0_50px_rgba(0,0,0,0.7)] border border-[#2a475e]/50 ring-1 ring-white/5">
        
        <div class="text-center">
            <h2 class="mt-2 text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-aurora-gold to-yellow-200 tracking-widest uppercase mb-2">
                Únete
            </h2>
            <p class="text-sm text-gray-400 tracking-wide font-medium">
                FORJA TU LEGADO EN CS2
            </p>
        </div>

        {{ form_start(registrationForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
            
            {% if form_errors(registrationForm) %}
                <div class="animate-pulse bg-red-900/30 border border-red-500/50 text-red-200 px-4 py-3 rounded text-sm shadow-sm">
                    {{ form_errors(registrationForm) }}
                </div>
            {% endif %}

            <div class="space-y-5">
                <div class="group">
                    <label class="block text-xs font-bold text-aurora-gold uppercase tracking-wider mb-2 transition-colors group-focus-within:text-white">Email</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-500">
                            <i class="fa-solid fa-envelope"></i>
                        </div>
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'appearance-none block w-full pl-10 pr-3 py-3 border border-[#2a475e] bg-[#1b2838] placeholder-gray-600 text-white rounded focus:outline-none focus:ring-2 focus:ring-aurora-gold focus:border-transparent focus:bg-[#202f42] transition-all sm:text-sm shadow-inner', 'placeholder': 'tu@email.com'}}) }}
                    </div>
                    <div class="text-red-400 text-xs mt-1 ml-1">{{ form_errors(registrationForm.email) }}</div>
                </div>

                <div class="group">
                    <label class="block text-xs font-bold text-aurora-gold uppercase tracking-wider mb-2 transition-colors group-focus-within:text-white">Contraseña</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-500">
                            <i class="fa-solid fa-shield-halved"></i>
                        </div>
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'appearance-none block w-full pl-10 pr-3 py-3 border border-[#2a475e] bg-[#1b2838] placeholder-gray-600 text-white rounded focus:outline-none focus:ring-2 focus:ring-aurora-gold focus:border-transparent focus:bg-[#202f42] transition-all sm:text-sm shadow-inner', 'placeholder': '••••••••'}}) }}
                    </div>
                    <div class="text-red-400 text-xs mt-1 ml-1">{{ form_errors(registrationForm.plainPassword) }}</div>
                </div>

                <div class="flex items-start gap-3 p-3 bg-black/20 rounded border border-gray-800">
                    <div class="flex items-center h-5">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-aurora-gold focus:ring-aurora-gold border-gray-600 rounded bg-[#1b2838] cursor-pointer'}}) }}
                    </div>
                    <div class="text-xs">
                        <span class="text-gray-400">Acepto los <a href="#" class="text-aurora-gold hover:text-white hover:underline transition-colors">Términos de Servicio</a> y la <a href="#" class="text-aurora-gold hover:text-white hover:underline transition-colors">Política de Privacidad</a>.</span>
                    </div>
                </div>
            </div>

            <div class="pt-2">
                <button type="submit" class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-bold rounded text-black bg-gradient-to-r from-aurora-gold to-yellow-500 hover:from-yellow-400 hover:to-aurora-gold focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-aurora-gold transition-all shadow-lg shadow-yellow-500/20 transform hover:-translate-y-0.5">
                     <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <i class="fa-solid fa-user-plus text-black/50 group-hover:text-black transition-colors"></i>
                    </span>
                    REGISTRARSE GRATIS
                </button>
            </div>

            <div class="relative flex py-4 items-center">
                <div class="flex-grow border-t border-gray-700"></div>
                <span class="flex-shrink-0 mx-4 text-gray-500 text-[10px] uppercase font-bold tracking-widest">O regístrate con</span>
                <div class="flex-grow border-t border-gray-700"></div>
            </div>

            <div>
                <a href="{{ path('connect_google_start') }}" class="group relative w-full flex justify-center py-3 px-4 border border-gray-600 text-sm font-bold rounded text-gray-200 bg-[#25282e] hover:bg-white hover:text-black focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all shadow-lg items-center gap-3 transform hover:-translate-y-0.5">
                    <i class="fa-brands fa-google text-red-500 text-lg group-hover:text-red-600"></i>
                    <span>Google</span>
                </a>
            </div>

        {{ form_end(registrationForm) }}
        
        <div class="text-center mt-6 pt-4 border-t border-gray-800">
            <p class="text-gray-500 text-xs">
                ¿Ya tienes una cuenta? 
                <a href="{{ path('app_login') }}" class="text-[#66c0f4] hover:text-white font-bold ml-1 hover:underline transition-colors">Inicia sesión</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}