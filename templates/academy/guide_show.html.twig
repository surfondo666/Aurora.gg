{% extends 'base.html.twig' %}

{% block title %}
	{{ guide.title }}
	| Academia Aurora.gg
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">

		<div class="mb-8 border-b border-aurora-border pb-6">
			<div class="flex items-center gap-4 mb-4">
				<a href="{{ path('app_academy_guides') }}" class="text-aurora-gold hover:text-white transition-colors" title="Volver a Guías">
					<i class="fa-solid fa-arrow-left text-xl"></i>
				</a>
				<span class="bg-aurora-gold text-black text-xs font-bold uppercase px-2 py-1 rounded">
					{{ guide.category }}
				</span>
			</div>

			<h1 class="text-4xl font-extrabold text-white uppercase tracking-wider mb-4">
				{{ guide.title }}
			</h1>

			<div class="flex items-center gap-4 text-sm text-gray-400">
				<div class="flex items-center gap-2">
					<i class="fa-regular fa-calendar text-aurora-gold"></i>
					<span>{{ guide.createdAt|date('d M Y') }}</span>
				</div>
				<span>&bull;</span>
				<div class="flex items-center gap-2">
					<i class="fa-regular fa-user text-aurora-gold"></i>
					<span>{{ guide.author.userIdentifier }}</span>
				</div>
			</div>
		</div>

		<article class="prose prose-invert prose-lg max-w-none text-gray-300">
			{{ guide.content|raw }}
		</article>

		<div class="mt-12 pt-8 border-t border-aurora-border flex justify-between items-center">
			<a href="{{ path('app_academy_guides') }}" class="text-gray-400 hover:text-white transition-colors flex items-center gap-2">
				<i class="fa-solid fa-arrow-left"></i>
				Volver a la lista de guías
			</a>
		</div>

	</div>
{% endblock %}
