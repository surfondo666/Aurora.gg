{# templates/server/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Lista de Servidores{% endblock %}

{% block body %}
<div class="container mx-auto px-6 py-12">
    <div class="flex justify-between items-end mb-8 border-b border-aurora-border pb-4">
        <h2 class="text-3xl font-bold text-white flex items-center gap-3">
            <i class="fa-solid fa-server text-aurora-gold"></i> Servidores Activos
        </h2>
    </div>

    <div class="overflow-x-auto bg-aurora-card rounded-lg border border-aurora-border shadow-xl">
        <table class="w-full text-left">
            <thead class="bg-black/40 text-gray-400 uppercase text-xs">
                <tr>
                    <th class="p-4">Estado</th>
                    <th class="p-4">Servidor</th>
                    <th class="p-4">Mapa</th>
                    <th class="p-4">Jugadores</th>
                    <th class="p-4">Ping</th>
                    <th class="p-4 text-right">Acci√≥n</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-aurora-border text-sm">
                {% for server in servers %}
                <tr class="hover:bg-white/5 transition-colors">
                    <td class="p-4">
                        <div class="flex items-center gap-2">
                            <div class="w-2 h-2 rounded-full bg-aurora-neon shadow-[0_0_10px_#39FF14]"></div> 
                            <span class="text-aurora-neon text-xs">ONLINE</span>
                        </div>
                    </td>
                    <td class="p-4 font-bold text-white">{{ server.name }}</td>
                    <td class="p-4 text-gray-400">{{ server.map }}</td>
                    <td class="p-4 text-gray-400">{{ server.players }}/{{ server.max_players }}</td>
                    <td class="p-4 text-aurora-gold font-mono">{{ server.ping }} ms</td>
                    <td class="p-4 text-right">
                        <button class="border border-aurora-gold text-aurora-gold text-xs px-4 py-1 rounded hover:bg-aurora-gold hover:text-black transition-all">
                            CONECTAR
                        </button>
                    </td>
                </tr>
                {% else %}
                    <tr><td colspan="6" class="p-4 text-center">No hay servidores disponibles.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}