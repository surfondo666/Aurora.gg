{% extends 'base.html.twig' %}

{% block title %}Stash Inventory | Aurora.gg{% endblock %}

{% block stylesheets %}
<style>
    .item-card {
        background: rgba(18, 18, 18, 0.8);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .item-card:hover {
        transform: translateY(-5px) scale(1.02);
        border-color: rgba(255, 215, 0, 0.3);
        box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5), 0 0 20px rgba(255, 215, 0, 0.1);
    }
    .rarity-bar {
        height: 4px;
        width: 100%;
        position: absolute;
        bottom: 0;
        left: 0;
    }
    .sidebar-item.active {
        background: rgba(255, 215, 0, 0.1);
        border-left: 3px solid #FFD700;
        color: #FFD700;
    }
    .custom-scroll::-webkit-scrollbar {
        width: 6px;
    }
    .custom-scroll::-webkit-scrollbar-track {
        background: #0A0A0A;
    }
    .custom-scroll::-webkit-scrollbar-thumb {
        background: #2A2A2A;
        border-radius: 10px;
    }
    .custom-scroll::-webkit-scrollbar-thumb:hover {
        background: #3A3A3A;
    }
    .loader {
        border-top-color: #FFD700;
        -webkit-animation: spinner 1.5s linear infinite;
        animation: spinner 1.5s linear infinite;
    }
    @-webkit-keyframes spinner {
        0% { -webkit-transform: rotate(0deg); }
        100% { -webkit-transform: rotate(360deg); }
    }
    @keyframes spinner {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>
{% endblock %}

{% block body %}
<div class="container mx-auto px-4 md:px-6 py-8 flex flex-col md:flex-row gap-8 min-h-[calc(100vh-160px)]">
    <!-- Sidebar -->
    <aside class="w-full md:w-64 flex-shrink-0">
        <div class="sticky top-28 bg-aurora-card rounded-2xl border border-aurora-border p-4 shadow-xl">
            <h2 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
                <i class="fa-solid fa-boxes-stacked text-aurora-gold"></i>
                Colecciones
            </h2>
            <!-- Collection Search -->
            <div class="relative mb-4">
                <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 -translate-y-1/2 text-gray-600 text-xs"></i>
                <input 
                    type="text" 
                    id="collection-search" 
                    placeholder="Filtrar colecciones..." 
                    class="w-full bg-black/20 border border-aurora-border rounded-lg py-1.5 pl-9 pr-3 text-xs text-white focus:outline-none focus:border-aurora-gold/30 transition-colors"
                >
            </div>
            <nav class="space-y-1 max-h-[55vh] overflow-y-auto custom-scroll pr-2" id="collection-nav">
                {% if collections|length > 0 %}
                    {% for collection in collections %}
                        <button 
                            class="sidebar-item w-full text-left px-4 py-3 rounded-xl text-gray-400 hover:text-white hover:bg-white/5 transition-all flex items-center justify-between group {% if loop.first %}active{% endif %}"
                            data-collection="{{ collection.id }}"
                        >
                            <span class="truncate font-medium">{{ collection.name }}</span>
                            <i class="fa-solid fa-chevron-right text-[10px] opacity-0 group-hover:opacity-100 transition-opacity"></i>
                        </button>
                    {% endfor %}
                {% else %}
                    <p class="text-gray-500 text-sm italic p-4">No hay colecciones disponibles.</p>
                {% endif %}
            </nav>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-grow">
        <!-- Header & Search -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8">
            <div>
                <h1 class="text-3xl font-extrabold text-white mb-2" id="current-collection-name">
                    {{ collections|length > 0 ? collections[0].name : 'Cargando...' }}
                </h1>
                <p class="text-gray-500 text-sm">Explora las skins y artículos exclusivos.</p>
            </div>
            <div class="relative w-full md:w-72">
                <i class="fa-solid fa-magnifying-glass absolute left-4 top-1/2 -translate-y-1/2 text-gray-500"></i>
                <input 
                    type="text" 
                    id="skin-search" 
                    placeholder="Buscar skin..." 
                    class="w-full bg-aurora-card border border-aurora-border rounded-full py-2.5 pl-11 pr-4 text-sm text-white focus:outline-none focus:border-aurora-gold/50 transition-colors shadow-inner"
                >
            </div>
        </div>

        <!-- Loading State -->
        <div id="loading-state" class="hidden flex-col items-center justify-center py-20">
            <div class="loader ease-linear rounded-full border-4 border-t-4 border-gray-900 h-12 w-12 mb-4"></div>
            <p class="text-gray-500">Cargando inventario...</p>
        </div>

        <!-- Skins Grid -->
        <div id="skins-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            <!-- Items injected via JS -->
        </div>

        <!-- Empty/Error States -->
        <div id="empty-state" class="hidden flex-col items-center justify-center py-20 text-gray-500">
            <i class="fa-solid fa-ghost text-5xl mb-4 opacity-20"></i>
            <p>No se encontraron skins con ese nombre.</p>
        </div>

        <div id="error-state" class="hidden flex-col items-center justify-center py-20 text-red-500">
            <i class="fa-solid fa-circle-exclamation text-5xl mb-4 opacity-50"></i>
            <p>Error al cargar los datos. Por favor, intenta de nuevo.</p>
        </div>
    </main>
</div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', () => {
        // En un escenario real con muchos datos, podríamos hacer fetch a un endpoint AJAX.
        // Aquí los pasamos inicialmente desde el controlador (Symfony standard).
        const collections = {{ collections|json_encode|raw }};
        const grid = document.getElementById('skins-grid');
        const searchInput = document.getElementById('skin-search');
        const collectionNav = document.getElementById('collection-nav');
        const collectionSearch = document.getElementById('collection-search');
        const collectionTitle = document.getElementById('current-collection-name');
        const emptyState = document.getElementById('empty-state');
        const loadingState = document.getElementById('loading-state');
        const errorState = document.getElementById('error-state');

        let currentCollectionId = collections.length > 0 ? collections[0].id : null;

        function renderSkins(filter = '') {
            if (!currentCollectionId) {
                if (collections.length === 0) {
                    errorState.classList.remove('hidden');
                    errorState.classList.add('flex');
                }
                return;
            }

            loadingState.classList.remove('hidden');
            loadingState.classList.add('flex');
            grid.innerHTML = '';
            emptyState.classList.add('hidden');
            errorState.classList.add('hidden');

            // Simulación de carga para mejor UX visual si es instantáneo
            setTimeout(() => {
                const collection = collections.find(c => c.id === currentCollectionId);
                if (!collection) {
                    loadingState.classList.add('hidden');
                    errorState.classList.remove('hidden');
                    return;
                }

                const filteredItems = collection.items.filter(item => 
                    item.name.toLowerCase().includes(filter.toLowerCase())
                );

                loadingState.classList.add('hidden');
                
                if (filteredItems.length === 0) {
                    emptyState.classList.remove('hidden');
                    emptyState.classList.add('flex');
                } else {
                    emptyState.classList.add('hidden');
                    
                    filteredItems.forEach(item => {
                        const card = document.createElement('div');
                        card.className = 'item-card relative overflow-hidden rounded-2xl p-4 flex flex-col h-full group';
                        card.innerHTML = `
                            <div class="relative z-10 flex flex-col h-full">
                                <div class="flex justify-between items-start mb-4">
                                    <span class="text-[10px] uppercase tracking-widest font-bold px-2 py-0.5 rounded bg-black/40 text-gray-400 border border-white/5">
                                        ${item.rarity}
                                    </span>
                                </div>
                                <div class="flex-grow flex items-center justify-center p-4">
                                    <img src="${item.imageUrl}" alt="${item.name}" class="max-w-full h-auto drop-shadow-2xl transition-transform duration-500 group-hover:scale-110" loading="lazy" referrerpolicy="no-referrer">
                                </div>
                                <div class="mt-4">
                                    <h3 class="text-white font-bold text-sm leading-tight group-hover:text-aurora-gold transition-colors">${item.name}</h3>
                                    <p class="text-gray-600 text-[10px] mt-1 uppercase">${item.weapon || ''}</p>
                                </div>
                            </div>
                            <div class="rarity-bar" style="background: ${item.rarityColor}"></div>
                            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"></div>
                        `;
                        grid.appendChild(card);
                    });
                }
            }, 300);
        }

        // Initial render
        renderSkins();

        // Collection switch
        collectionNav.addEventListener('click', (e) => {
            const btn = e.target.closest('.sidebar-item');
            if (!btn) return;

            document.querySelectorAll('.sidebar-item').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            currentCollectionId = btn.dataset.collection;
            const collection = collections.find(c => c.id === currentCollectionId);
            collectionTitle.textContent = collection.name;
            
            searchInput.value = '';
            renderSkins();
        });

        // Search with debounce to prevent excessive rendering on long lists
        let timeout = null;
        searchInput.addEventListener('input', (e) => {
            clearTimeout(timeout);
            timeout = setTimeout(() => {
                renderSkins(e.target.value);
            }, 100);
        });

        // Collection search logic
        collectionSearch.addEventListener('input', (e) => {
            const term = e.target.value.toLowerCase();
            const buttons = collectionNav.querySelectorAll('.sidebar-item');
            let hasVisible = false;

            buttons.forEach(btn => {
                const name = btn.querySelector('span').textContent.toLowerCase();
                if (name.includes(term)) {
                    btn.classList.remove('hidden');
                    btn.classList.add('flex');
                    hasVisible = true;
                } else {
                    btn.classList.remove('flex');
                    btn.classList.add('hidden');
                }
            });

            // Handle empty search result for collections
            let emptyMsg = collectionNav.querySelector('.empty-collections-msg');
            if (!hasVisible) {
                if (!emptyMsg) {
                    emptyMsg = document.createElement('p');
                    emptyMsg.className = 'empty-collections-msg text-gray-500 text-[10px] italic p-4 text-center';
                    emptyMsg.textContent = 'No se encontraron colecciones.';
                    collectionNav.appendChild(emptyMsg);
                }
            } else if (emptyMsg) {
                emptyMsg.remove();
            }
        });
    });
</script>
{% endblock %}
